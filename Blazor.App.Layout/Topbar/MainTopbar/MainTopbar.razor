@namespace Blazor.App.Layout
@inherits MainTopbarComponent

<Topbar RootRef="@RootRef"
        Class="@_Class"
        Style="@_Style"
        GrowStyle="@GrowStyle"
        GrowClass="@GrowClass"
        @attributes="Attributes">
    <Hidden MediumDown>
        <IconButton Color="@Color.Inherit">
            <Badge Nib="@Notifications"
                   Color="@Color.Primary"
                   Variant="@NibVariant.Dot">
                <NotificationsOutlinedIcon />
            </Badge>
        </IconButton>
        <IconButton Class="MainTopbar-Signout"
                    Color="@Color.Inherit">
            <InputIcon />
        </IconButton>
    </Hidden>
    <Hidden LargeUp>
        <IconButton Color="@Color.Inherit"
                    OnClick="@OnSidebarOpen">
            <MenuIcon />
        </IconButton>
    </Hidden>
</Topbar>
