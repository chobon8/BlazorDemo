@namespace Blazor.App.Layout
@inherits TopbarComponent

<AppBar RootRef="@RootRef"
        Class="@_Class"
        Style="@_Style"
        @attributes="Attributes">
    <Toolbar>
        <NavLink href="./"
                 Match="@NavLinkMatch.Prefix">
            <AppLogo />
        </NavLink>
        @if (HasContent)
        {
            <div class="@_GrowClass"
                 style="@_GrowStyle" />
            @ChildContent
        }
    </Toolbar>
</AppBar>
